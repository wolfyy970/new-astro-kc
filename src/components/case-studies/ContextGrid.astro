---
interface Props {
    challenge: string;
    role: string;
    company: string;
    scope: string;
    team: string;
}

const { challenge, role, company, scope, team } = Astro.props;
---

<section class="context">
    <div class="context-inner">
        <div>
            <div class="section-label">The Challenge</div>
            <h2 class="section-heading">{challenge}</h2>
            <p class="section-body">
                <slot />
            </p>
        </div>
        <div>
            <div class="meta-grid">
                <div class="meta-item">
                    <h4>My Role</h4>
                    <p>{role}</p>
                </div>
                <div class="meta-item">
                    <h4>Company</h4>
                    <p>{company}</p>
                </div>
                <div class="meta-item">
                    <h4>Scope</h4>
                    <p>{scope}</p>
                </div>
                <div class="meta-item">
                    <h4>Team</h4>
                    <p>{team}</p>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .context {
        padding: 160px 80px;
        background: #fff;
    }

    .context-inner {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 80px;
        max-width: 1300px;
        margin: 0 auto;
    }

    .section-label {
        font-size: 11px;
        font-weight: 600;
        letter-spacing: 4px;
        text-transform: uppercase;
        color: var(--accent, #3b1a5a);
        margin-bottom: 24px;
    }

    .section-heading {
        font-family: "Playfair Display", serif;
        font-size: 32px;
        font-weight: 400;
        color: #1a1a1a;
        line-height: 1.25;
        margin-bottom: 32px;
    }

    .section-body {
        font-family: "Inter", sans-serif;
        font-size: 16px;
        font-weight: 300;
        color: #5a5a5a;
        line-height: 1.8;
    }

    .meta-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 48px;
    }

    .meta-item h4 {
        font-size: 10px;
        font-weight: 600;
        letter-spacing: 2px;
        text-transform: uppercase;
        color: #999;
        margin-bottom: 12px;
    }

    .meta-item p {
        font-size: 14px;
        font-weight: 400;
        color: #1a1a1a;
        line-height: 1.4;
    }

    @media (max-width: 1024px) {
        .context {
            padding: 100px 32px;
        }
        .context-inner {
            grid-template-columns: 1fr;
            gap: 48px;
        }
        .meta-grid {
            gap: 32px;
        }
    }
</style>
