---
interface Props {
    columns?: 1 | 2 | 3;
}

const { columns = 2 } = Astro.props;
---

<div class={`showcase-grid cols-${columns}`}>
    <slot />
</div>

<style>
    .showcase-grid {
        display: grid;
        gap: 40px;
        margin-top: 80px;
        max-width: 1300px;
        margin-left: auto;
        margin-right: auto;
    }

    .cols-1 {
        grid-template-columns: 1fr;
    }
    .cols-2 {
        grid-template-columns: repeat(2, 1fr);
    }
    .cols-3 {
        grid-template-columns: repeat(3, 1fr);
    }

    @media (max-width: 1024px) {
        .showcase-grid {
            grid-template-columns: 1fr !important;
            gap: 32px;
            margin-top: 48px;
        }
    }
</style>
