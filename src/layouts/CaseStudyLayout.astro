---
import "../styles/case-study.css";
import { buildAccentStyle } from "../utils/color";

interface Props {
  title: string;
  description: string;
  ogImage?: string;
  /** Brand accent color as a 6-digit hex (e.g. `"#3b1a5a"`). Falls back to the
   *  portfolio's default amber if omitted or invalid. */
  accent?: string;
}

const { title, description, ogImage, accent } = Astro.props;
const accentStyle = buildAccentStyle(accent);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {ogImage && <meta property="og:image" content={ogImage} />}
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />

    <!-- Favicon -->
    <link rel="icon" href="/favicon.png" />

    <!-- Case study fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Playfair+Display:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
    <style>
      .skip-link {
        position: absolute;
        top: -100px;
        left: 0;
        background: var(--accent, #000);
        color: #fff;
        padding: 10px 20px;
        z-index: 9999;
        transition: top 0.2s;
        font-size: 14px;
        text-decoration: none;
        font-weight: 600;
        letter-spacing: 1px;
        text-transform: uppercase;
      }
      .skip-link:focus {
        top: 0;
      }
    </style>
  </head>
  <body style={accentStyle}>
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <nav class="back-nav">
      <a class="back-link" href="/">&larr; Back</a>
    </nav>

    <main id="main-content">
      <slot />
    </main>

    <footer>
      <p>KC &mdash; Design Leadership</p>
    </footer>
  </body>
</html>
