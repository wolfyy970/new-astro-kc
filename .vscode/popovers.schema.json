{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Popover Inventory Schema",
    "type": "object",
    "additionalProperties": {
        "type": "object",
        "required": [
            "label",
            "text"
        ],
        "properties": {
            "label": {
                "type": "string",
                "description": "The category or title shown in the popover header / margin note."
            },
            "text": {
                "type": "string",
                "description": "The main body text for the popover."
            },
            "stat": {
                "type": "string",
                "description": "Optional high-impact statistic shown in large display type."
            },
            "img": {
                "type": "string",
                "description": "Path to the image (relative to public directory).",
                "pattern": "^/images/.*"
            },
            "quote": {
                "type": "string",
                "description": "An optional pull-quote or testimonial."
            },
            "link": {
                "type": "string",
                "description": "Internal or external URL."
            },
            "linkText": {
                "type": "string",
                "description": "Label for the link button."
            }
        }
    }
}